{
  "extends": ["@alastair-smith/tsconfig"],
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "@/mocks/*": ["./mocks/*"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.mts"
  ]
}
