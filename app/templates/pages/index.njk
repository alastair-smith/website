{% extends "components/base-page.njk" %}

{% import "components/card.njk" as card %}

{% set mainClasses = "limit-width home-page" %}

{% block headEnd %}
  <link rel="preload" href="{{ '/assets/fonts/open-sans-v18-latin-800.woff2' }}" as="font" type="font/woff2" crossorigin>
{% endblock %}

{% block content %}

  <div class="about-me">
    <h1 class="name">
      <span>Alastair</span>
      <br>
      <span>Smith</span>
    </h1>
    <div class="detail">
      <span>
        I'm a software engineer from the UK and this website is a collection of stupid stuff I've made in my spare time.
      </span>
    </div>
  </div>

  <div class="posts">
    {% for post in allPostsInfo %}
      {{ card.component(post) }}
    {% endfor %}
  </div>
  
{% endblock %}
