{% macro component(params) %}

  <div class="card">
    <h2>{{ params.title }}</h2>

    {% if params.date and params.publish %}
      <time class="card-date" datetime="{{ params.date }}">
        {{ params.date | date }}
      </time>
    {% endif %}
    
    <span class="card-about">{{ params.about }}</span>

    {% if params.url or params.blogUrl %}
      <div class="card-links">
        {% if params.url %}
          <a href="{{ params.url }}">
            <span role="img" alt="">🧑‍💻&nbsp;</span>
            <span>App</span>
          </a>
        {% endif %}
        {% if params.blogUrl %}
          <a href="{{ params.blogUrl }}">
            <span role="img" alt="">📝&nbsp;</span>
            <span>Blog</span>
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>

{% endmacro %}
