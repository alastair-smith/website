{
  "name": "common-components",
  "version": "1.0.0",
  "description": "Standard web components to use accross website",
  "scripts": {
    "linter:js": "standard -v | snazzy",
    "test:unit": "mocha --require @babel/register --require @babel/polyfill --require ./test/unit/.mocha.config.js ./test/unit/*",
    "test": "npm audit && npm outdated && npm run linter:js && npm run test:unit",
    "start": "polyserve & sensible-browser localhost:8081/test/view"
  },
  "author": "Alastair Smith",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "mocha": "^6.0.0",
    "polyserve": "^0.27.15",
    "rewire": "^4.0.1",
    "sinon": "^7.2.4",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "lit-element": "^2.0.1"
  },
  "standard": {
    "globals": [
      "assert",
      "customElements",
      "describe",
      "expect",
      "it",
      "afterEach"
    ]
  }
}
